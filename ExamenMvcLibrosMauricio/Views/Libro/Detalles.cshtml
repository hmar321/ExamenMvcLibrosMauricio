@model Libro

<h1>Detalles</h1>

<div>
    <h4>Libro</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Titulo
        </dt>
        <dd class = "col-sm-10">
            @Model.Titulo
        </dd>
        <dt class = "col-sm-2">
            Autor
        </dt>
        <dd class = "col-sm-10">
            @Model.Autor
        </dd>
        <dt class = "col-sm-2">
            Editorial
        </dt>
        <dd class = "col-sm-10">
            @Model.Editorial
        </dd>
        <dt class = "col-sm-2">
            Portada
        </dt>
        <dd class = "col-sm-10">
            <img src="~/images/@Model.Portada" class="rounded" style="width:10rem;height:15rem;" />
        </dd>
        <dt class = "col-sm-2">
            Resumen
        </dt>
        <dd class = "col-sm-10">
            @Model.Resumen
        </dd>
        <dt class = "col-sm-2">
            Precio
        </dt>
        <dd class = "col-sm-10">
            @Model.Precio€
        </dd>
    </dl>
</div>
<div>
    <a asp-controller="Libro" asp-action="Comprar" asp-route-idlibro="@Model.IdLibro" class="btn btn-primary">Comprar</a>
</div>
